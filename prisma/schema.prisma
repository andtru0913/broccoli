// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
    id              String @id @default(auto()) @map("_id") @db.ObjectId
    username        String
    password        String
    firstname       String?
    lastname        String?
    gender          String
    email           String @unique
    address         String?
    privatenumber   String?
    worknumber      String?
    company         String?
    admin           Boolean @default(false)
    salt            String
    lunchgroup      Lunchgroup? @relation(fields: [lunchgroupID], references: [id])
    lunchgroupID    String? @db.ObjectId
    events          UserOnEvent[]
    image           String?
}

model Event {
    id              String @id @default(auto()) @map("_id") @db.ObjectId
    title           String
    start           String
    end             String
    description     String?
    users           UserOnEvent[]
}

model Lunchgroup {
    id              String @id @default(auto()) @map("_id") @db.ObjectId
    title           String
    users           User[]
}

model Page {
    id              String @id @default(auto()) @map("_id") @db.ObjectId
    title           String
    description     String?
    cards           Card[]
}

model Card {
    id              String  @id @default(auto()) @map("_id") @db.ObjectId
    title           String
    description     String?
    image           String?
    page            Page    @relation(fields: [pageID], references: [id])
    pageID          String  @db.ObjectId
}
model Posts {
    id              String @id @default(auto()) @map("_id") @db.ObjectId
    slug            String @unique
    title           String
    body            String
    timestamp       DateTime
}

model UserOnEvent {
    id          String  @id @default(auto()) @map("_id") @db.ObjectId
    user        User    @relation(fields: [userId], references: [id])
    userId      String  @db.ObjectId
    event       Event   @relation(fields: [eventId], references: [id])
    eventId     String  @db.ObjectId
    coming      Boolean?
    @@unique([userId, eventId])
}

model Document {
    id          String  @id @default(auto()) @map("_id") @db.ObjectId
    title       String
    filename    String
    date        String
}
